{
	"name": "gh-actions-test-vscode-extension",
	"displayName": "GitHub Actions Test Extension",
	"description": "A test extension for mimicking my Travis CI config for Kotlin for FRC on Github Actions",
	"publisher": "Brenek",
	"version": "0.0.8",
	"repository": "https://github.com/zPaw/gh-actions-test-vscode-extension",
	"preview": true,
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:gh-actions-test-vscode-extension.helloWorld",
		"onCommand:gh-actions-test-vscode-extension.goodbyeWorld"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gh-actions-test-vscode-extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "gh-actions-test-vscode-extension.goodbyeWorld",
				"title": "Goodbye World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"ts-loader": "^8.0.11",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"badges": [
		{
			"description": "Node.js CI",
			"url": "https://github.com/zPaw/gh-actions-test-vscode-extension/workflows/Node.js%20CI/badge.svg?branch=master&event=push",
			"href": "https://github.com/zPaw/gh-actions-test-vscode-extension/actions"
		},
		{
			"description": "GitHub Super-Linter",
			"url": "https://github.com/zPaw/gh-actions-test-vscode-extension/workflows/Lint%20Code%20Base/badge.svg",
			"href": "https://github.com/marketplace/actions/super-linter"
		}
	]
}
